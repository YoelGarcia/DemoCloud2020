                var ayudaContacto = document.getElementById('ayuda');
                var selectedAyuda = ayudaContacto.options[ayudaContacto.selectedIndex].text;
                ayudaContacto = selectedAyuda;
                
                var promosIbm = document.getElementById('promos');
                var selectedPromos = promosIbm.options[promosIbm.selectedIndex].text;
                promosIbm = selectedPromos;

                var http = new XMLHttpRequest();
                var url = "http://localhost:3000";
                //var email = document.getElementById('email');
                //var password = document.getElementById('pass');
                http.open("POST", url, true);
                http.setRequestHeader("Content-Type", "application/json;charset=UTF-8");


                http.onreadystatechange = function() {
                    if(http.readyState == 4 && http.status == 200) { 
                    //aqui obtienes la respuesta de tu peticion
                    alert(http.responseText);
                    }
                }

                http.send(JSON.stringify({nombre:nombre, 
                                          telefono: telefono,
                                          email: email,
                                          parecerEvento: parecerEvento,
                                          parecerSesion: parecerSesion,
